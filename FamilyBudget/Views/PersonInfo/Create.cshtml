
@model PersonInfo

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Information</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="Profession"></label>
            <input asp-for="Profession" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="JobDescription"></label>
            <input asp-for="JobDescription" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DOB"></label>
            <input asp-for="DOB" class="form-control" />
        </div>

        <button type="submit" onclick="ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="PersonInfo" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>


    </div>
</form>

@section Scripts{
    <script>
        function ValidateInput(){
            document.getElementById("upload"){
                Swal.fire({
                  position: 'top-end',
                  icon: 'success',
                  title: 'Your work has been saved',
                  showConfirmButton: false,
                  timer: 1500
                })
                 
             
            }
         
        }
    </script>
}

           