
@model IEnumerable<PersonInfo>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Person List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="PersonInfo" asp-action="Create" class="btn btn-Primary">
            Create New Person
            </a>
        </div>
    </div>


<table id="tblData" class="table table-borderd table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Profession</th>
            <th>Date of Birth</th>
            <th>Job Description</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="25%">
                        @obj.Name
                    </td>
                    <td width="25%">
                        @obj.DOB
                    </td>
                    <td width="25%">
                        @obj.Profession
                    </td>
                    <td width="25%">
                        @obj.JobDescription
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="PersonInfo" asp-action="Edit" asp-route-id="@obj.Id">Update</a>
                            <a asp-controller="PersonInfo" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>

                        </div>
                    </td>
                </tr>
            }
    </tbody>

</table>

</div>








